# 백엔드 환경 변수
# 보안 키 (프로덕션에서는 반드시 변경하세요!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# 데이터베이스 설정
DATABASE_URL=sqlite:///shamstagram.db

# 프론트엔드 URL
FRONTEND_URL=http://localhost:5173

# OpenAI API 설정 (선택사항 - 없으면 템플릿 기반 생성)
OPENAI_API_KEY=your-openai-api-key-here

# 앱 설정
MAX_INVITATIONS=10
AI_BOT_COUNT=5
AI_COMMENT_DELAY_MIN=3000
AI_COMMENT_DELAY_MAX=10000

# JWT 설정
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Flask 설정
FLASK_ENV=development
FLASK_DEBUG=True